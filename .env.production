# Database Configuration (You need to set these in Vercel Environment Variables)
DB_HOST=your-postgres-host
DB_USERNAME=your-postgres-username
DB_PASSWORD=your-postgres-password
DB_DATABASE=your-postgres-database
DB_PORT=5432

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRATION_TIME=1d

# TextLocal Configuration
TEXTLOCAL_API_KEY=your-textlocal-api-key
TEXTLOCAL_SENDER_NAME=booka

# Port (Vercel will handle this)
Port=3000

# Firebase Service Account (Set this as environment variable in Vercel)
FIREBASE_SERVICE_ACCOUNT_KEY=your-firebase-service-account-json

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Node Environment
NODE_ENV=production